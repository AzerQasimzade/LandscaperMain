@model List<Service>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Service Table</h4>
                        <a class="btn btn-success" asp-area="LandscaperAdmin" asp-action="Create" asp-controller="Service">Create</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Photo
                                        </th>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Description
                                        </th> 
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td class="py-1">
                                                <img src="~/assets/Landscaper/img/services/@item.Image" alt="image" />
                                            </td>
                                            <td>
                                                @item.Title
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td>
                                               <a class="btn btn-warning" asp-area="LandscaperAdmin" asp-action="Update" asp-controller="Service" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="LandscaperAdmin" asp-action="Delete" asp-controller="Service" asp-route-id="@item.Id">Delete</a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

